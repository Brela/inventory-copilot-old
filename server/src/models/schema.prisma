datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Product {
    id             Int       @id @default(autoincrement())
    sku            String    @unique
    image          String?
    brand          String
    name           String
    inStock        Int
    reorderAt      Int
    orderQty       Int
    arrivalDate    DateTime?
    itemUsageSpeed Int
    priceEA        Float
    shipper        String
    // shipping cost only used for order now popup - it would also be used in a order settings page
    shippingCost   Float
    orders         Order[]
}

model Order {
    id           Int     @id @default(autoincrement())
    orderID      String  @unique
    productID    Int
    product      Product @relation(fields: [productID], references: [id])
    productName  String
    orderQty     Int
    shippingCost Float
    totalCost    Float
}
